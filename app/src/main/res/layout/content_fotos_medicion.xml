<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FotosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabelRazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PRUEBA DE EL CLIENTE NUMERO 1"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnTomarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="on_ClickTomarFoto"
                    android:src="@mipmap/botontomarfoto" />

                <ImageButton
                    android:id="@+id/btnGuardarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:onClick="on_ClickGuardarFoto"
                    android:src="@mipmap/botonagregarfoto" />

                <ImageButton
                    android:id="@+id/btnEliminarFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:onClick="on_ClickEliminarFoto"
                    android:src="@mipmap/botoneliminarfoto" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7">

                <ImageView
                    android:id="@+id/imageFoto"
                    android:layout_width="match_parent"
                    android:layout_height="330sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40sp"
                    android:background="@mipmap/fotovacia"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <Gallery
            android:id="@+id/galleryFotos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:paddingLeft="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- BOTON DE ACCION DEL MODULO -->
            <Button
                android:id="@+id/btnContinuar"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/buttonmsgnegative"
                android:onClick="on_ClickContinuarExhibidor"
                android:text="TERMINAR"
                android:textColor="@android:color/white" />

            <!-- BOTON DE ACCION DEL MODULO -->
            <Button
                android:id="@+id/btnTerminarActivacion"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/buttonmsgnegative"
                android:onClick="on_ClickTerminarMedicionFotos"
                android:text="TERMINAR"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
