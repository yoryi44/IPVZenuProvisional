<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PrecioProductosActivity">

    <LinearLayout
        android:id="@+id/llContenidoVistaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabelRazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PRUEBA DE EL CLIENTE NUMERO 1"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- TABS DE INFORMACION DE PRECIO -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabsPrecioProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed" />

        <!-- SEPARADOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorAccent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/flInformacionProductosPropiosPrecios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llListaProductosPropios"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:orientation="vertical" />

                    </ScrollView>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flInformacionProductosCompetenciaPrecios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llListaProductosCompetencia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:orientation="vertical" />

                    </ScrollView>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llInfoAgotados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="10sp"
                android:visibility="gone"
                android:background="@android:color/transparent"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="N - No Manejante"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="A - Agotado"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInfoCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="10sp"
                android:visibility="gone"
                android:background="@android:color/transparent"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="MP - Materia Prima"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="G - Gramaje"
                    android:textSize="14sp" />

            </LinearLayout>
            <!-- BOTONES DE ACCION DEL MODULO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnAgregarDisponibilidad"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/buttonmsgnegative"
                    android:onClick="on_ClickAgregarProductoAgotados"
                    android:visibility="gone"
                    android:text="AGREGAR"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnAgregarProductoCompetencia"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/buttonmsgnegative"
                    android:onClick="on_ClickAgregarProductoCompetencia"
                    android:visibility="gone"
                    android:text="AGREGAR"
                    android:textColor="@android:color/white" />

                <!-- BOTON DE ACCION DEL MODULO -->
                <Button
                    android:layout_width="230sp"
                    android:layout_height="40sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/buttonmsg"
                    android:onClick="on_ClickTerminarPrecios"
                    android:text="TERMINAR REGISTRO PRECIOS"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
