<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CrearProductoCompetenciaActivity">

    <LinearLayout
        android:id="@+id/llContenidoVistaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:layout_weight="1">

            <!-- CONTENIDO DEL FORMULARIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreProdutoCompetencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Producto"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etNombreProdutoCompetencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:maxLines="3" />

                <!--
                <TextView
                    android:id="@+id/tvNumeroCarasProdutoCompetencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numero Caras"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etNumeroCarasProdutoCompetencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:inputType="number"
                    android:maxLength="3" />
                    -->

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- BOTONES DE ACCION DEL MODULO -->
            <Button
                android:id="@+id/btnEditarExhibidor"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/buttonmsg"
                android:onClick="on_ClickAgregarProductoCompetencia"
                android:text="AGREGAR PROD"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
