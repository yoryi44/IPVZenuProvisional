<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ListaFormatoGeneralActivacionActivity">

    <LinearLayout
        android:id="@+id/llContenidoVistaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabelRazonSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PRUEBA DE EL CLIENTE NUMERO 1"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- INFORMACION DESCRIPCION MODULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="80sp"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/ivImagenTipoSeleccionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTituloTipoSeleccionado"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="@color/colorGrisOscuroLetra"
                android:textSize="20sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lvListaGeneralProductosActivacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- BOTONES DE ACCION DEL MODULO -->
            <Button
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/buttonmsg"
                android:onClick="on_ClickAgregarProductoActivacion"
                android:text="AGREGAR"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnFinalizarMedicion"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/buttonmsgnegative"
                android:onClick="on_ClickContinuarOpcionGeneral"
                android:text="CONTINUAR"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

