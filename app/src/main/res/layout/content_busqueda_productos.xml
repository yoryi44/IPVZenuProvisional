<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BusquedaProductosActivity">

    <LinearLayout
        android:id="@+id/llContenidoVistaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:layout_margin="10sp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="2"
                android:background="@drawable/edittext_rounded"
                android:gravity="center_vertical"
                android:paddingLeft="10sp"
                android:paddingRight="10sp">

                <EditText
                    android:id="@+id/etOpcionBusquedaProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:maxLength="25"
                    android:singleLine="true" />

                <ImageButton
                    android:id="@+id/ibFiltroBusquedaProducto"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/iconobusqueda" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

        </LinearLayout>

        <ListView
            android:id="@+id/lvListaProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center_vertical|right">

            <ImageButton
                android:id="@+id/btnAgregarProductoComp"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginRight="10sp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:onClick="on_ClickAgregarProductoCompNuevo"
                android:src="@mipmap/botonmostrarmas"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>