<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemTextAppearance="@style/NavigationText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230sp"
                android:background="@mipmap/fondosidebar"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/nav_header_desc"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    app:srcCompat="@mipmap/imagenperfil" />

                <TextView
                    android:id="@+id/tvNombrePanelLateral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text=""
                    android:textAppearance="@style/FullscreenThemeMenuLateralTitulo" />

                <TextView
                    android:id="@+id/tvCodigoPanelLateral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textAppearance="@style/FullscreenThemeMenuLateralInfo" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp">

                <LinearLayout
                    android:id="@+id/llContendorOpcionesMenuLateral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <!-- OPCION CLIENTES -->
                    <LinearLayout
                        android:id="@+id/llOpcionClientes"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionClientes"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconoclientes" />

                        <TextView
                            android:id="@+id/tvOpcionClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Clientes"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- OPCION CLIENTES -->
                    <LinearLayout
                        android:id="@+id/llOpcionInformeEncuestas"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:layout_marginTop="24sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionInformeEncuestas"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconocopiar" />

                        <TextView
                            android:id="@+id/tvOpcionInformeEncuestas"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Info Encuesta"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- OPCION CONFIGURACION -->
                    <LinearLayout
                        android:id="@+id/llOpcionConfiguracion"
                        android:layout_width="match_parent"
                        android:layout_height="26sp"
                        android:layout_marginTop="24sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionConfiguracion"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconoconfiguracion" />

                        <TextView
                            android:id="@+id/tvOpcionConfiguracion"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Configuración"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/ivIndicadorLista"
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_marginLeft="30sp"
                            android:layout_marginTop="6sp"
                            android:src="@mipmap/icono_contraido"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- VISTA DE VENDEDORES A SINCRONIZAR -->
                    <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llContenedorListaVendedores"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60sp"
                            android:layout_marginTop="10sp"
                            android:orientation="vertical"/>

                    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                    <!-- OPCION SINCRONIZAR -->
                    <LinearLayout
                        android:id="@+id/llOpcionSincronizar"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:layout_marginTop="22sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionSincronizar"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconosincronizar" />

                        <TextView
                            android:id="@+id/tvOpcionSincronizar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Sincronizar"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- OPCION INICIAR DIA -->
                    <LinearLayout
                        android:id="@+id/llOpcionIniciarDia"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:layout_marginTop="24sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionIniciarDia"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconoiniciardia" />

                        <TextView
                            android:id="@+id/tvOpcionIniciarDia"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Iniciar día"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- OPCION ENVIAR INFO -->
                    <LinearLayout
                        android:id="@+id/llOpcionEnviarInfo"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:layout_marginTop="24sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionEnviarInfo"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconoenviarinfo" />

                        <TextView
                            android:id="@+id/tvOpcionEnviarInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Enviar info"
                            android:textColor="@color/colorGrisOscuroLetra"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- OPCION CERRAR SESION -->
                    <LinearLayout
                        android:id="@+id/llOpcionCerrarSesion"
                        android:layout_width="match_parent"
                        android:layout_height="24sp"
                        android:layout_marginTop="24sp"
                        android:layout_marginBottom="25sp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivOpcionCerrarSesion"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="16sp"
                            android:src="@mipmap/iconocerrarsesion" />

                        <TextView
                            android:id="@+id/tvOpcionCerrarSesion"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32sp"
                            android:text="Cerrar Sesión"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvVersionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 1.26"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"/>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
