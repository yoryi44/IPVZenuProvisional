<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AgregarProcutoCompretenciaActivity">


    <LinearLayout
        android:id="@+id/llContenidoVistaPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="@dimen/titulo_modulos"
                            android:text="Linea"
                            android:textColor="@color/colorPrimary"/>
                        <Spinner
                            android:id="@+id/spLinea"
                            android:background="@drawable/borderectangular"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="@dimen/titulo_modulos"
                            android:text="MP"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/colorPrimary"/>

                        <Spinner
                            android:id="@+id/spMaterias"
                            android:background="@drawable/borderectangular"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textSize="@dimen/titulo_modulos"
                            android:text="Marcas"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/colorPrimary"/>

                        <Spinner
                            android:id="@+id/spMarcas"
                            android:background="@drawable/borderectangular"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/titulo_modulos"
                            android:layout_marginTop="20dp"
                            android:text="Gr"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/colorPrimary"/>

                        <Spinner
                            android:id="@+id/spGramos"
                            android:background="@drawable/borderectangular"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/titulo_modulos"
                        android:layout_margin="10sp"
                        android:text="Precio"
                        android:textColor="@color/colorPrimary"/>

                    <LinearLayout
                        android:id="@+id/llBordeCantidad"
                        android:layout_width="130dp"
                        android:layout_height="38sp"
                        android:layout_marginLeft="10sp"
                        android:background="@drawable/edittext_rounded"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp">



                        <EditText
                            android:id="@+id/etPrecioProdCompetencia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColorHint="@color/colorGrisClaroLetra"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@mipmap/fondofooter"
            android:gravity="center_vertical|right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <!-- BOTON DE ACCION DEL MODULO -->
                <Button
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/buttonmsg"
                    android:onClick="on_ClickGuardarProductoComp"
                    android:text="GUARDAR"
                    android:layout_marginRight="10sp"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnAgregarDisponibilidad"
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:layout_marginBottom="5sp"

                    android:background="@drawable/buttonmsgnegative"
                    android:onClick="on_ClickCancelarProductoComp"
                    android:text="CANCELAR"

                    android:textColor="@android:color/white" />



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>