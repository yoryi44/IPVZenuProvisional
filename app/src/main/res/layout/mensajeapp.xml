<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvTitle"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGrisOscuroLetra"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrisOscuroLetra"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvMsg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorGrisOscuroLetra"
            android:textSize="14dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="New Button"
                android:id="@+id/btnSi"
                android:background="@drawable/buttonmsg"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="New Button"
                android:id="@+id/btnNo"
                android:background="@drawable/buttonmsgnegative"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>