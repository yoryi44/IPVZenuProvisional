<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenThemeView" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FullscreenThemeMenuLateralTitulo" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FullscreenThemeMenuLateralInfo" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeSpinner" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrisOscuroLetra</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorGrisOscuroLetra</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
